{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "allowJs": false,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }